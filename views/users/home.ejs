<%- include('../layouts/header.ejs') %>

<style>
    body {
        background-image: url('./images/blurImg.jpg');
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
    }
    .login-container {
        background: rgba(198, 9, 9, 0.8);
        padding: 2rem;
        border-radius: 10px;
        box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
    }
</style>

<link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">

<div class="container mt-5">
    <h1 class="text-center">Welcome, <%= user.name %></h1>

    <div class="row justify-content-center mt-4">
        <div class="col-md-6">
            <div class="card" style="background-color: transparent;">
                <div class="card-body text-center">
                    <img src="userImages/<%= user.image %>" class="img-thumbnail" alt="<%= user.image %>" style="width: 150px; height: 150px;">
                </div>
            </div>
            <table class="table mt-4">
                <tbody>
                    <tr>
                        <th scope="row">Email</th>
                        <td><%= user.email %></td>
                    </tr>
                    <tr>
                        <th scope="row">Mobile</th>
                        <td><%= user.mobile %></td>
                    </tr>
                    <tr>
                        <th scope="row">Verified</th>
                        <td>
                            <% if(user.is_varified == 1){ %>
                                <span class="badge badge-success">true</span>
                            <% } %>
                        </td>
                    </tr>
                </tbody>
            </table>
            <div class="text-center">
                <a href="/edit?id=<%= user._id %>" class="btn btn-primary">Edit</a>
                <a href="/logout" class="btn btn-secondary">Logout</a>
            </div>
        </div>
    </div>
</div>

<%- include('../layouts/footer.ejs') %>

<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.3/dist/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
