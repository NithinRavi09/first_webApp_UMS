

<%- include('../layouts/header.ejs') %>

 <style>
    body {
        background-image: url('./images/6080984.jpg');
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
    }
    .login-container {
        background: rgba(255, 255, 255, 0.8);
        padding: 2rem;
        border-radius: 10px;
        box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
    }
</style>

<div id="login" class="container mt-5 d-flex justify-content-center">
    <div class="login-container">
        <h1 class="text-center">Login</h1>

        <% if(typeof message !== 'undefined'){ %>
            <div class="alert alert-success" id="timer"><%= message %></div>
        <% } %>

        <% if(typeof message2 !== 'undefined'){ %>
            <div class="alert alert-danger" id="timer"><%= message2 %></div>
        <% } %>

        <form action="/login" method="post" class="needs-validation" novalidate>
            <div class="form-group">
                <label for="email">Email address</label>
                <input type="email" class="form-control" id="email" name="email" placeholder="Enter email" required>
                <div class="invalid-feedback">Please enter a valid email address.</div>
            </div>
            <div class="form-group">
                <label for="password">Password</label>
                <input type="password" class="form-control" id="password" name="password" placeholder="Enter password" required>
                <div class="invalid-feedback">Please enter your password.</div>
            </div>
            <button type="submit" class="btn btn-primary btn-block">Login</button>
            <a href="/register" class="btn btn-link d-block text-center">Register</a>
        </form>
    </div>
</div>

<%- include('../layouts/footer.ejs') %>

<script>
    // Automatically remove the alert messages after 3 seconds
    const timer = document.getElementById('timer');
    if (timer) {
        setTimeout(() => {
            timer.remove();
        }, 3000);
    }

    // Bootstrap validation script
    (function() {
        'use strict';
        window.addEventListener('load', function() {
            // Fetch all the forms we want to apply custom Bootstrap validation styles to
            var forms = document.getElementsByClassName('needs-validation');
            // Loop over them and prevent submission
            var validation = Array.prototype.filter.call(forms, function(form) {
                form.addEventListener('submit', function(event) {
                    if (form.checkValidity() === false) {
                        event.preventDefault();
                        event.stopPropagation();
                    }
                    form.classList.add('was-validated');
                }, false);
            });
        }, false);
    })();
</script>
