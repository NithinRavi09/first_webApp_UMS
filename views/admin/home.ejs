

<%- include('../layouts/header.ejs') %>

<style>
    body {
        background-image: url('./images/blurImg.jpg');
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
    }
    .login-container {
        background: rgba(198, 9, 9, 0.8);
        padding: 2rem;
        border-radius: 10px;
        box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
    }
</style>

<div class="container mt-5">
    <h1 class="text-center">Welcome, <%= admin.name %></h1>

    <div class="text-center mb-4">
        <a href="/admin/dashboard" class="btn btn-primary">Dashboard</a>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card">
                <div class="card-body text-center">
                    <img src="/userImages/<%= admin.image %>" class="rounded-circle mb-3" width="100" height="100" alt="<%= admin.image %>">
                    <table class="table">
                        <tbody>
                            <tr>
                                <td>Email</td>
                                <td><%= admin.email %></td>
                            </tr>
                            <tr>
                                <td>Mobile</td>
                                <td><%= admin.mobile %></td>
                            </tr>
                        </tbody>
                    </table>
                    <a href="/admin/logout" class="btn btn-danger">Logout</a>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('../layouts/footer.ejs') %>

